{
  "name": "Advanced Adblock Blocklist",
  "description": "Advanced configuration demonstrating exclusions, inclusions, and multiple source types",
  "homepage": "https://github.com/AdguardTeam/HostlistCompiler",
  "license": "GPLv3",
  "version": "1.0.0.0",
  "sources": [
    {
      "name": "AdGuard DNS Filter",
      "source": "https://adguardteam.github.io/AdGuardSDNSFilter/Filters/filter.txt",
      "type": "adblock",
      "transformations": ["RemoveComments", "RemoveModifiers", "Validate"],
      "exclusions": [
        "*localhost*",
        "*local*",
        "*test*"
      ]
    },
    {
      "name": "StevenBlack Hosts (Optimized)",
      "source": "https://raw.githubusercontent.com/StevenBlack/hosts/master/hosts",
      "type": "hosts",
      "transformations": ["RemoveComments", "Compress", "Validate"],
      "exclusions": [
        "*localhost*",
        "*broadcasthost*",
        "*ip6-*"
      ]
    },
    {
      "name": "Local Advanced Rules",
      "source": "sources/advanced-rules.txt",
      "type": "adblock",
      "transformations": ["RemoveComments", "Validate"]
    }
  ],
  "transformations": [
    "Deduplicate",
    "Compress",
    "Validate",
    "RemoveEmptyLines",
    "TrimLines",
    "InsertFinalNewLine"
  ],
  "exclusions": [
    "*localhost*",
    "*local*",
    "*broadcasthost*",
    "*ip6-*",
    "*test*"
  ]
}